datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  role     Role
  name     String
  phone    String
  slots    Slot[]   @relation("CoachSlots")
  bookings Slot[]   @relation("StudentBookings")
}

model Slot {
  id          Int      @id @default(autoincrement())
  coachId     Int
  studentId   Int?
  startTime   DateTime
  satisfaction Int?
  notes       String?

  coach    User @relation("CoachSlots", fields: [coachId], references: [id])
  student  User? @relation("StudentBookings", fields: [studentId], references: [id])
}

enum Role {
  COACH
  STUDENT
}
